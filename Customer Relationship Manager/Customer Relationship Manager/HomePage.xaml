<Page x:Class="Customer_Relationship_Manager.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Customer_Relationship_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="Home">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Content="Home Page" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Left" Margin="390,23,0,0" VerticalAlignment="Top" />
        <Button x:Name="CreateClient" Content="Create a Client" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Margin="96,32,0,0" VerticalAlignment="Top" Width="150" Height="72" Grid.RowSpan="2" FontSize="20" FontWeight="Bold" Click="CreateClient_Click" />
        <Button x:Name="ListClients" Content="List of Clients" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Margin="96,36,0,0" VerticalAlignment="Top" Width="150" Height="72" FontSize="20" FontWeight="Bold" />

    </Grid>
</Page>
